import corejava.Console;

public class Cliente {
	private String nome;
	private int matricula;
	private String contato;
	private String endereco;
	private String situacao;
	
	public Cliente(String nome, int matricula, String contato, String endereco, String situacao)
	{
		this.nome = nome;
		this.matricula = matricula;
		this.contato = contato; 
		this.endereco = endereco;
		this.situacao = situacao;
	}

	public String getNome()
	{
		return nome;
	}
	
	public void setNome(String nome)
	{
		 this.nome = nome;
	}

	public int getMatricula()
	{
		return matricula;
	}
	
	public void setMatricula(int matricula)
	{
		this.matricula = matricula;
	}

	public String getContato()
	{
		return contato;
	}
	
	public void setContato(String contato)
	{
		this.contato = contato;
	}
	
	public String getEndereco()
	{
		return endereco;
	}

	public void setEndereco(String endereco)
	{
		this.endereco = endereco;
	}

	public String getSituacao()
	{
		return situacao;
	}
	
	public void setSituacao(String situacao)
	{
		this.situacao = situacao;
	}


	public void getRealizarCadastro()
	{
	}
	
	public void RealizarCadastro()
	{
		nome = Console.readLine('\n' + "Informe o nome do cliente: ");
		matricula = Console.readInt('\n' + "Informe a matricula do cliente: ");
		contato = Console.readLine('\n' + "informe um contato do cliente: ");
		endereco = Console.readLine('\n' + "Informe o endereço do cliente: ");
		situacao = Console.readLine('\n' + "Informe a situação do cliente: ");
	}
}
